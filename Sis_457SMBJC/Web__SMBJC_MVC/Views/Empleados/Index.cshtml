@model IEnumerable<Web__SMBJC_MVC.Models.Empleado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Empleados</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th>Cargo</th>
            <th>Salario</th>
            <th>Uusario de Registro</th>
            <th>Fecha de Registro</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>Nombres</td>
            <td>Apellidos</td>
            <td>Teléfono</td>
            <td>Cargo</td>
            <td>Salario</td>
            <td>Usuario de Registro</td>
            <td>Fecha de Registro</td>
            <td>Estado</td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.IdEmpleado" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ver"><i class="fas fa-eye me-2"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.IdEmpleado" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editar"><i class="fas fa-edit me-2"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdEmpleado" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Eliminar"><i class="fas fa-trash me-2"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
